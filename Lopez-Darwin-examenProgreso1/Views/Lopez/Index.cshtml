@model IEnumerable<Lopez_Darwin_examenProgreso1.Models.Lopez>

@{
    ViewData["Title"] = "Usuarios";
}

<h1>Usuarios</h1>

<p>
    <a asp-action="Create">Añadir un nuevo Usuario</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.edad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EsEcuatoriano)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaNacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estatura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.celulares)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.edad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EsEcuatoriano)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaNacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estatura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.celulares.modelo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.nombre">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.nombre">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.nombre">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
